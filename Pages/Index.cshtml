@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<link href="~/lib/datatables/css/dataTables.bootstrap5.css" rel="stylesheet" />
<link href="~/lib/datatables/responsive/css/responsive.bootstrap5.css" rel="stylesheet" />
<link href="~/lib/datatables/scroller/css/scroller.bootstrap5.min.css" rel="stylesheet" />

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;" class="">
        <table id="customerDatatable" class="table table-striped dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Contact</th>
                    <th>Email</th>
                    <th>Date Of Birth</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts
    {

    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@

    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap5.min.js"></script>

    <script src="~/lib/datatables/responsive/js/datatables.responsive.min.js"></script>
    <script src="~/lib/datatables/responsive/js/responsive.bootstrap5.min.js"></script>

    <script src="~/lib/datatables/scroller/js/datatables.scroller.min.js"></script>
    <script src="~/lib/datatables/scroller/js/scroller.bootstrap5.min.js"></script>


    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.4/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/plug-ins/1.10.16/sorting/datetime-moment.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/plug-ins/1.10.21/dataRender/datetime.js"></script>
    
    <script src="~/js/customerDatatable.js"></script>
}